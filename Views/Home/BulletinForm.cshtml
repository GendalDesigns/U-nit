@model Bulletin
<nav class="navbar">
    <h1 class="display-4">U-nit!</h1>
    <a href="/Dashboard" class="aButton btn btn-lg btn-success m-3">Dashboard</a>
    <a href="/Logout" class="aButton btn btn-lg btn-danger m-3">Logout</a>
    </div>
</nav>
<div class="buildInfo text-center">
    <h1>Provide your bulletin information:</h1>
    <form asp-controller="Home" asp-action="BulletinSubmit" method="post">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control">
            <span asp-validation-for="Title" class="alert-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Topic"></label>
            <input asp-for="Topic" class="form-control">
            <span asp-validation-for="Topic" class="alert-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Content"></label>
            <textarea asp-for="Content" class="form-control"></textarea>
            <span asp-validation-for="Content" class="alert-danger"></span>
        </div>
        <input type="submit" class="addButton btn btn-success btn-large">
    </form>
</div>